<p id="notice"><%= notice %></p>

<h1>Flights</h1>
<h4> search by pnr code</h4>
  <%= form_tag(search_path , method: :get) do %>
   <%= text_field_tag(:pnr , params[:pnr]) %>
   <%= submit_tag("serach") %>
  <% end %>

<h4 style="margin:0;display:inline;float:left" > create new flight</h4>
<%=  link_to 'Create Flight', new_flight_path %>
<table>
  <thead>
    <tr>
      <th>Aeroplan type</th>
      <th>Origin</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.aeroplan_type %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= link_to 'Show', flight %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
          <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
